<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:visibility="invisible"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textGuess3Cross"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess3Answer" />

    <TextView
        android:id="@+id/textGuess3Answer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess2Cross" />

    <TextView
        android:id="@+id/textGuess2Cross"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess2Answer" />

    <TextView
        android:id="@+id/textGuess2Answer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess1Cross" />

    <TextView
        android:id="@+id/textGuess1Cross"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess1Answer" />

    <TextView
        android:id="@+id/textGuess1Answer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textGuessCheck3"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #3 Check"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess3" />

    <TextView
        android:id="@+id/textGuess3"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #3"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuessCheck2" />

    <TextView
        android:id="@+id/textGuessCheck2"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #2 Check"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess2" />

    <TextView
        android:id="@+id/textGuess2"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #2"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuessCheck1" />

    <TextView
        android:id="@+id/textGuessCheck1"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #1 Check"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuess1" />

    <TextView
        android:id="@+id/textGuess1"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:text="Guess #1"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess!"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:textSize="20dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Enter 4 letter guess here"
        android:inputType="text"
        android:maxLength="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/answer"
        android:layout_width="228dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:textSize="48dp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streakView" />

    <TextView
        android:id="@+id/streakView"
        android:layout_width="175dp"
        android:layout_height="85dp"
        android:layout_marginTop="28dp"
        android:textSize="24dp"
        android:visibility="invisible"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textGuessCheck3" />

</androidx.constraintlayout.widget.ConstraintLayout>